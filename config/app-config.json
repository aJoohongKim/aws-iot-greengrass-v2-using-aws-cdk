{
    "Project": {
        "Name": "IotData",
        "Stage": "Demo",
        "Account": "75157*******",
        "Region": "us-east-2",
        "Profile": "cdk-demo"
    },

    "Stack": {
        "IoTThing": {
            "Name": "IoTThingStack",
            
            "ThingNamePrefix": "Ver01",
            "ThingGroupName": "Ver01Dev",

            "CredentialSelection": "TempCredential",
            "CredentialCases": {
                "UserCredential": {
                    "ThingSetupUserName": "ThingInstaller"
                },
                "TempCredential": {
                    "TempSetupRoleName": "InstallerTempRole"
                }
            },
            "LambdaTimeout" : "60"
        },
        "ThingMonitor": {
            "Name": "ThingMonitorStack"
            
        },
        "ThingSimulation": {
            "Name": "ThingSimulationStack",

            "SnSTopic": "thingSimulationTopic",
            "LambdaName": "thingSimulationLambda",
            "CodePath": "./codes/lambda/simulation-thing-logger/src",
            "LambdaDescription": "thing simulation lambda",
            "LambdaCount": "1",
            "LambdaTimeout" : "32"
        },
        "GreengrassComponent": {
            "Name": "GreengrassComponentStack",

            "LambdaName": "LoggerSampleLambda",
            "CodePath": "./codes/lambda/comp_logger_sample/src",
            "PublishTopic": "test/topic",
            "LambdaTimeout" : "60"
        },
        "DataPipeline": {
            "Name": "DataPipelineStack",

            "S3BucketName": "data-iot",
            "IoTRuleTopic": "$aws/rules",
            "IoTRuleTopic-Desc": "https://docs.aws.amazon.com/iot/latest/developerguide/iot-basic-ingest.html",

            "S3IngestionRuleName": "s3_ingestion",

            "DomainName": "iot-data",
            "MasterUserName": "iotdataadmin",
            "ElasticsearchSelection": "DEVELOP",
            "ElasticsearchCandidate": {
                "DEVELOP": {

                },
                "PRODUCTION": {
                    "VolumeSize": 20,
                    "AZCount": 3,
                    "MasterNodeCount": 5,
                    "MasterNodeType": "r5.large.elasticsearch",
                    "DataNodeCount": 5,
                    "DataNodeType": "r5.large.elasticsearch"
                }
            },
            "ElasticsearchPrice": "https://aws.amazon.com/ko/elasticsearch-service/pricing/",
            
            "IndexSensor": "log-sensor",
            "LambdaDataS3toEsName": "data-s3-to-es-func",
            "LambdaDataS3toEsPath": "./codes/lambda/data-s3-to-es/src"
        },
        "CicdPipeline": {
            "Name": "CicdPipelineStack",

            "RepositorySelection": "CodeCommit",
            "RepositoryCandidate": {
                "CodeCommit": {
                    "RepositoryName": "iot-data-service",
                    "BranchName": "master"
                }
            }
        }
    }
}